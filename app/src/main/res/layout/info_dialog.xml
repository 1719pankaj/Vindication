<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/itemTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/ownerTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/ownerTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/completionTV"
        app:layout_constraintEnd_toEndOf="@+id/itemTV"
        app:layout_constraintStart_toStartOf="@+id/itemTV"
        app:layout_constraintTop_toBottomOf="@+id/itemTV" />

    <TextView
        android:id="@+id/completionTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/dateTV"
        app:layout_constraintEnd_toEndOf="@+id/ownerTV"
        app:layout_constraintStart_toStartOf="@+id/ownerTV"
        app:layout_constraintTop_toBottomOf="@+id/ownerTV" />

    <TextView
        android:id="@+id/dateTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/completionTV"
        app:layout_constraintStart_toStartOf="@+id/completionTV"
        app:layout_constraintTop_toBottomOf="@+id/completionTV" />
</androidx.constraintlayout.widget.ConstraintLayout>